<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recommends
    </h1>

    <a href="/recommends/new" class="btn btn-block btn-outline-secondary">
      Add a new recommend
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "recommend_templates/recommends_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Song
        </th>

        <th>
          User
        </th>

        <th>
          Activity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recommends.each do |recommend| %>
      <tr>
        <td>
          <%= recommend.id %>
        </td>

        <td>
          <% if recommend.song.present? %>
            <a href="/songs/<%= recommend.song.id %>">
              <%= recommend.song.artist %>
            </a>
          <% end %>
        </td>

        <td>
          <% if recommend.user.present? %>
            <a href="/users/<%= recommend.user.id %>">
              <%= recommend.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if recommend.activity.present? %>
            <a href="/activities/<%= recommend.activity.id %>">
              <%= recommend.activity.activity_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(recommend.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(recommend.updated_at) %> ago
        </td>

        <td>
          <a href="/recommends/<%= recommend.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recommends, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
