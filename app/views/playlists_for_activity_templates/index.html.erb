<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All playlists for activities
    </h1>

    <a href="/playlists_for_activities/new" class="btn btn-block btn-outline-secondary">
      Add a new playlists for activity
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "playlists_for_activity_templates/playlists_for_activities_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity
        </th>

        <th>
          Playlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @playlists_for_activities.each do |playlists_for_activity| %>
      <tr>
        <td>
          <%= playlists_for_activity.id %>
        </td>

        <td>
          <% if playlists_for_activity.activity.present? %>
            <a href="/activities/<%= playlists_for_activity.activity.id %>">
              <%= playlists_for_activity.activity.activity_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if playlists_for_activity.playlist.present? %>
            <a href="/playlists/<%= playlists_for_activity.playlist.id %>">
              <%= playlists_for_activity.playlist.playlist_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(playlists_for_activity.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(playlists_for_activity.updated_at) %> ago
        </td>

        <td>
          <a href="/playlists_for_activities/<%= playlists_for_activity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @playlists_for_activities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
