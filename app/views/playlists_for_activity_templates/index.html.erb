<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All playlists for activities
    </h1>

    <a href="/playlists_for_activities/new" class="btn btn-block btn-outline-secondary">
      Add a new playlists for activity
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity
        </th>

        <th>
          Playlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @playlists_for_activities.each do |playlists_for_activity| %>
      <tr>
        <!-- Display playlists_for_activity.id start -->
        <td>
          <%= playlists_for_activity.id %>
        </td>
        <!-- Display playlists_for_activity.id end -->

        <!-- Display playlists_for_activity.activity_id start -->
        <td>
          <%= playlists_for_activity.activity.activity_name %>
        </td>
        <!-- Display playlists_for_activity.activity_id end -->

        <!-- Display playlists_for_activity.playlist_id start -->
        <td>
          <%= playlists_for_activity.playlist.playlist_name %>
        </td>
        <!-- Display playlists_for_activity.playlist_id end -->

        <!-- Display playlists_for_activity.created_at start -->
        <td>
          <%= time_ago_in_words(playlists_for_activity.created_at) %> ago
        </td>
        <!-- Display playlists_for_activity.created_at end -->

        <!-- Display playlists_for_activity.updated_at start -->
        <td>
          <%= time_ago_in_words(playlists_for_activity.updated_at) %> ago
        </td>
        <!-- Display playlists_for_activity.updated_at end -->

        <td>
          <a href="/playlists_for_activities/<%= playlists_for_activity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @playlists_for_activities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
