<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Playlists for activity #<%= @playlists_for_activity.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/playlists_for_activities" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/playlists_for_activities/<%= @playlists_for_activity.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit playlists for activity
        </a>
      </div>

      <div class="col">
        <a href="/delete_playlists_for_activity/<%= @playlists_for_activity.id %>" class="btn btn-block btn-outline-secondary">
          Delete playlists for activity
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Activity
      </dt>
      <dd>
        <% if @playlists_for_activity.activity.present? %>
          <a href="/activities/<%= @playlists_for_activity.activity_id %>">
            <%= @playlists_for_activity.activity.activity_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Playlist
      </dt>
      <dd>
        <% if @playlists_for_activity.playlist.present? %>
          <a href="/playlists/<%= @playlists_for_activity.playlist_id %>">
            <%= @playlists_for_activity.playlist.playlist_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@playlists_for_activity.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@playlists_for_activity.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

