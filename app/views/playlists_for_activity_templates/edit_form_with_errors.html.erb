<% if @playlists_for_activity.errors.any? %>
  <% @playlists_for_activity.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit playlists for activity #<%= @playlists_for_activity.id %>
</h1>

<hr>

<form action="/update_playlists_for_activity/<%= @playlists_for_activity.id %>" method="post">

  <div class="form-group">
    <label for="activity_id">
      Activity
    </label>

    <%= select_tag(:activity_id, options_from_collection_for_select(Activity.all, :id, :activity_name, @playlists_for_activity.activity_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="playlist_id">
      Playlist
    </label>

    <%= select_tag(:playlist_id, options_from_collection_for_select(Playlist.all, :id, :playlist_name, @playlists_for_activity.playlist_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update playlists for activity
  </button>
</form>

<hr>

<a href="/playlists_for_activities">
  Go back
</a>
