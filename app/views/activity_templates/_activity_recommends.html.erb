<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recommends

    <a data-toggle="collapse" href="#activity_recommends_new_form">
      Add recommend
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.recommends.each do |recommend| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/recommends/<%= recommend.id %>">
          <%= recommend.song_id %>
        </a>

        <%if current_user == recommend.user %>
          <a href="/delete_recommend_from_activity/<%= recommend.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_recommends_new_form">
        <%= render partial: "activity_templates/activity_recommends_new_form" %>
      </div>
    </div>

  </ul>
</div>
