<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All activities
    </h1>

    <a href="/activities/new" class="btn btn-block btn-outline-secondary">
      Add a new activity
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "activity_templates/activities_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @activities.each do |activity| %>
      <tr>
        <td>
          <%= activity.id %>
        </td>

        <td>
          <%= activity.activity_name %>
        </td>

        <td>
          <%= time_ago_in_words(activity.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(activity.updated_at) %> ago
        </td>

        <td>
          <a href="/activities/<%= activity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @activities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
