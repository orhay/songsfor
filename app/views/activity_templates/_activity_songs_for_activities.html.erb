<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Songs For Activities

    <a data-toggle="collapse" href="#activity_songs_for_activities_new_form">
      Add songs for activity
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.songs_for_activities.each do |songs_for_activity| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/songs_for_activities/<%= songs_for_activity.id %>">
          <%= songs_for_activity.song_id %>
        </a>

        <a href="/delete_songs_for_activity_from_activity/<%= songs_for_activity.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_songs_for_activities_new_form">
        <%= render partial: "activity_templates/activity_songs_for_activities_new_form" %>
      </div>
    </div>

  </ul>
</div>
