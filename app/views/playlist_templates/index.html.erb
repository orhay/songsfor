<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All playlists
    </h1>

    <a href="/playlists/new" class="btn btn-block btn-outline-secondary">
      Add a new playlist
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Playlist name
        </th>

        <th>
          Spotify playlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @playlists.each do |playlist| %>
      <tr>
        <!-- Display playlist.id start -->
        <td>
          <%= playlist.id %>
        </td>
        <!-- Display playlist.id end -->

        <!-- Display playlist.description start -->
        <td>
          <%= playlist.description %>
        </td>
        <!-- Display playlist.description end -->

        <!-- Display playlist.user_id start -->
        <td>
          <%= playlist.user.username %>
        </td>
        <!-- Display playlist.user_id end -->

        <!-- Display playlist.playlist_name start -->
        <td>
          <%= playlist.playlist_name %>
        </td>
        <!-- Display playlist.playlist_name end -->

        <!-- Display playlist.spotify_playlist_id start -->
        <td>
          <%= playlist.spotify_playlist_id %>
        </td>
        <!-- Display playlist.spotify_playlist_id end -->

        <!-- Display playlist.created_at start -->
        <td>
          <%= time_ago_in_words(playlist.created_at) %> ago
        </td>
        <!-- Display playlist.created_at end -->

        <!-- Display playlist.updated_at start -->
        <td>
          <%= time_ago_in_words(playlist.updated_at) %> ago
        </td>
        <!-- Display playlist.updated_at end -->

        <td>
          <a href="/playlists/<%= playlist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
