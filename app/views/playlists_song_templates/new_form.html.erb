<h1>
  Add a new playlists song
</h1>


<hr>

<form action="/create_playlists_song" method="post">

  <div class="form-group">
    <label for="song_id">
      Song
    </label>

    <%= select_tag(:song_id, options_from_collection_for_select(Song.all, :id, :artist, @playlists_song.song_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="playlist_id">
      Playlist
    </label>

    <%= select_tag(:playlist_id, options_from_collection_for_select(Playlist.all, :id, :playlist_name, @playlists_song.playlist_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create playlists song
  </button>
</form>

<hr>

<a href="/playlists_songs">
  Go back
</a>
