<h1>
  Add a new song
</h1>


<hr>

<form action="/create_song" method="post">

  <div class="form-group">
    <label for="artist">
      Artist
    </label>

    <textarea id="artist" name="artist" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="song_name">
      Song name
    </label>

    <input type="text" id="song_name" name="song_name" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create song
  </button>
</form>

<hr>

<a href="/songs">
  Go back
</a>
